
<div class="banner" style="background-image: linear-gradient(-225deg, #efc64e78 0%, rgba(85, 92, 97, 0.35) 50%), url('<%= image_path 'background.png'%>')">
      <div class="banner-content">
        <h1>Kampai!</h1>
        <p>Discover awesome drinks</p>
        <%= link_to "Add a drink!", new_cocktail_path, Class: 'btn-yours' %>
      </div>
    </div>

<div id="index-cocktail">
<% @cocktails.each do |cocktail| %>
  <% if cocktail.photo? %>
    <% my_photo_url = cl_image_path cocktail.photo.url, height: 200, width: 200, crop: :fit%>
  <% else %>
    <% my_photo_url = image_path('not-available') %>
  <% end %>
  <div class="card index-cocktail-item" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= my_photo_url %>');">
    <div class="card-description">
      <h2><%= cocktail.name %></h2>
    </div>
    <%= link_to "", cocktail_path(cocktail), Class: 'card-link' %>
  </div>
<% end %>
</div>
<div class="list-group">
<% @cocktails.each do |cocktail| %>
  <%= link_to cocktail.name, cocktail_path(cocktail), Class: 'list-group-item' %>
<% end %>
</div>
